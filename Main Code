#include <iostream>
#include <cstdlib>
#include <ctime>
#include <unistd.h>
using namespace std;

int main() {
    cout << "Game Start in 10 SEC Be ready" << endl;
    usleep(10000000);
    char myArray[2][2]={{'O','O'},{'O','*'}};
    char choice;
    int score = 0;
    while(true) {
        // shuffle here
        srand(time(NULL)); // seed random number generator
        int x, y;
        char temp;
        for (int i=0;i<2;i++) {
            for (int j=0;j<2;j++) {
                x = rand() % 2;
                y = rand() % 2;
                temp = myArray[i][j];
                myArray[i][j] = myArray[x][y];
                myArray[x][y] = temp;
            }
        }
        cout << endl << endl;
        // print again
        for (int i=0;i<2;i++){
            for (int j=0;j<2;j++)
                
            {
                cout << myArray[i][j]<<" ";
            }
            
            cout << endl;
        }
        
        cout << "Whack a mole: ";
        
        cin >> choice;
        
        
        
        //change && to || so that is counts for every matching input
        
        if ((choice == 'Q' && myArray[0][0] == '*') || (choice == 'W' && myArray[0][1] == '*') || (choice == 'A' && myArray[1][0] == '*') || (choice == 'S' && myArray[1][1] == '*')) {
            
            
            score += 1;
        }
        //break while loop if input doesn't match
        
        if ((choice != 'Q' && myArray[0][0] == '*') || (choice != 'W' && myArray[0][1] == '*') || (choice != 'A' && myArray[1][0] == '*') || (choice != 'S' && myArray[1][1] == '*')) {
            
            cout << "whoops! you hit the wrong key" << endl;
            break;
        }
        
        if (score ==20){
            
            cout << "Next level" << endl;
            cout << " WAIT 5 SEC FOR NEXT LEVEL" << endl;
            
            break;
            
        }
        
        
        //print score and ratio in every loop
        
        cout << "YOUR SCORE IS: " << score << "/20: The hitting ratio is:" << (score/20.0)*100<<endl;
        
        cout << endl;
    }
    cout << endl;
    //print final hitting ratio
    cout<<"Your score is " <<score<<"\\20 "<<"Your hitting ratio is : "<<(score/20.0)*100 << "%" <<endl;
    
    
    
    usleep(5000000);
    
    if ( score ==20){
        char myArray[3][3]={{'O','O','O'},{'O','O','*'},{'O','O','O'}};
        char choice;
        while(true) {
            // shuffle here
            srand(time(NULL)); // seed random number generator
            int x, y;
            char temp;
            for (int i=0;i<3;i++) {
                for (int j=0;j<3;j++) {
                    x = rand() % 3;
                    y = rand() % 3;
                    temp = myArray[i][j];
                    myArray[i][j] = myArray[x][y];
                    myArray[x][y] = temp;
                }
            }
            cout << endl << endl;
            // print again
            for (int i=0;i<3;i++){
                for (int j=0;j<3;j++)
                    
                {
                    cout << myArray[i][j]<<" ";
                }
                
                cout << endl;
            }
            
            cout << "Whack a mole: ";
            
            cin >> choice;
            
            
            
            //change && to || so that is counts for every matching input
            
            if ((choice =='Q' && myArray[0][0] == '*') ||(choice == 'A' && myArray[1][0] == '*') || (choice == 'W' && myArray[0][1] == '*') || (choice == 'S' && myArray[1][1] == '*') || (choice == 'E' && myArray[0][2] == '*') || (choice == 'D' && myArray[1][2] == '*') || (choice == 'C' && myArray[2][2] == '*') || (choice == 'Z' && myArray[2][1] == '*') || (choice == 'X' && myArray[2][0] == '*')){
                
                //increse the score for matching input
                
                score+=1;
            }
            //break while loop if input doesn't match
            
            if((choice != 'Q' && myArray[0][0] == '*') || (choice != 'A' && myArray[1][0] == '*') || (choice != 'W' && myArray[0][1] == '*') || (choice != 'S' && myArray[1][1] == '*') || (choice != 'E' && myArray[0][2] == '*') || (choice != 'D' && myArray[1][2] == '*') || (choice != 'C' && myArray[2][2] == '*') || (choice != 'Z' && myArray[2][0] == '*') || (choice != 'X' && myArray[2][1] == '*')) {
                
                cout << "whoops! you hit the wrong key" << endl;
                
                break;
            }
            
            if (score ==40){
                
                cout << "Next level" << endl;
                cout << " WAIT 5 SEC FOR NEXT LEVEL" << endl;
                
                
                break;
                
            }
            
            //print score and ratio in every loop
            
            cout << "YOUR SCORE IS: " << score << " The hitting ratio is:" << (score/40.0)*100<<endl;
            
            cout << endl;
        }
        cout << endl;
        //print final hitting ratio
        cout<<"Your score is " <<score<<"\\40 "<<"Your hitting ratio is : "<<(score/40.0)*100 << "%" <<endl;
        
        
        
        usleep(5000000);
        
        if ( score ==40){
            char myArray[4][4]={{'O','O','O','O'},{'O','O','*','O'},{'O','O','O','O'},{'O','O','O','O'}};
            char choice;
            while(true) {
                // shuffle here
                srand(time(NULL)); // seed random number generator
                int x, y;
                char temp;
                for (int i=0;i<4;i++) {
                    for (int j=0;j<4;j++) {
                        x = rand() % 4;
                        y = rand() % 4;
                        temp = myArray[i][j];
                        myArray[i][j] = myArray[x][y];
                        myArray[x][y] = temp;
                    }
                }
                cout << endl << endl;
                // print again
                for (int i=0;i<4;i++){
                    for (int j=0;j<4;j++)
                        
                    {
                        cout << myArray[i][j]<<" ";
                    }
                    
                    cout << endl;
                }
                
                cout << "Whack a mole: ";
                
                cin >> choice;
                
                
                
                //change && to || so that is counts for every matching input
                
                if((choice == 'Q' && myArray [1][0]== '*') || (choice == 'W' && myArray [1][1]== '*')|| (choice == 'A' && myArray [2][0]== '*') || (choice == 'S' && myArray [2][1]== '*') || (choice == 'E' && myArray [1][2]== '*') || (choice =='D' && myArray [2][2]== '*') || (choice == 'C' && myArray [3][2]== '*') || (choice == 'Z' && myArray [3][0]== '*') || (choice == 'X' && myArray [3][1]== '*') || (choice =='V' && myArray [3][3]== '*') || (choice =='F' && myArray [2][3]== '*') || (choice == 'R' && myArray [1][3]== '*') || (choice == '1' && myArray [0][0]== '*') || (choice == '2' && myArray [0][1]== '*') || (choice == '3' && myArray [0][2]== '*') || (choice == '4' && myArray [0][3]== '*')){
                    
                    //increse the score for matching input
                    
                    score+=1;
                }
                //break while loop if input doesn't match
                
                if((choice != 'Q' && myArray [1][0]== '*') && (choice != 'W' && myArray [1][1]== '*') && (choice != 'A' && myArray [2][0]== '*') && (choice != 'S' && myArray [2][1]== '*') && (choice != 'E' && myArray [1][2]== '*') && (choice !='D' && myArray [2][2]== '*') && (choice != 'C' && myArray [3][2]== '*') && (choice != 'Z' && myArray [3][0]== '*') && (choice != 'X' && myArray [3][1]== '*') && (choice =='V' && myArray [3][3]== '*') && (choice !='F' && myArray [2][3]== '*') && (choice != 'R' && myArray [1][3]== '*') && (choice != '1' && myArray [0][0]== '*') && (choice != '2' && myArray [0][1]== '*') && (choice != '3' && myArray [0][2]== '*') && (choice != '4' && myArray [0][3]== '*')){

                    break;
                }
                
                if (score ==60){
                    
                    cout << "YOU WIN THE GAME YEEPEE" << endl;
                    
                    break;
                    
                }
                
                //print score and ratio in every loop
                
                cout << "YOUR SCORE IS: " << score << " The hitting ratio is:" << (score/60.0)*100<<endl;
                
                cout << endl;
            }
            cout << endl;
            //print final hitting ratio
            cout<<"Your score is " <<score<<"\\60 "<<"Your hitting ratio is : "<<(score/60.0)*100 << "%" <<endl;
            
        }
        
    }
    
    return 0;
    
}



