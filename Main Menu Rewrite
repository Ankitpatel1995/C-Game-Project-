#include <iostream>
#include <cmath>
#include <cstdlib>
using namespace std;

int MainMenu(){

    cout << "MAIN MENU:" << endl;
    cout << "Press L for How to Play:" << endl;
    cout << "Press K for Controls:" << endl;
    cout << "Press P to Play Now:" << endl;
    cout << endl;
}

int MenuFunctions(char option){

    char menuSelect;
    int i;

        if (option == 'K' || option == 'k'){
            cout << endl << "CONTROLS" << endl;
            cout << endl;
            cout << "The controls for the first level on the keyboard is: Q,W,A,S" << endl;
            cout << "The second Level Q,W,E,A,S,D,Z,X,C" << endl;
            cout << "and the final level 1,2,3,4,Q,W,E,R,A,S,D,F,Z,X,C,V." << endl;
            cout << endl << endl;
            cout << "Enter Y to return to Main Menu." << endl;
            cin >> menuSelect;
            cout << endl;
        }
        if (option =='L' || option =='l'){
            cout << endl << "OBJECTIVE" << endl;
            cout << "This is a simple game where you have to whack the mole, represented by a *, by hitting the key" << endl;
            cout << "that corresponds with the mole's location. The controls for each difficulty are shown under the" << endl;
            cout << "Controls option in the menu. You only get a few seconds to see where the mole is located, so pay" << endl;
            cout << "attention so you don't miss it!" << endl << endl;
            cout << "Enter Y to return to Main Menu." << endl;
            cin >> menuSelect;
            cout << endl;
        }
        if (option == 'P' || option == 'p'){
            cout << "Game starts in 10 seconds. Get ready to do some whacking!" << endl;    //this is currently broken, I'm trying to fix it
        }
}

int main(){

    int i = 0;
    char userInput;
    char menuSelect;

